@model WorldOfHalalWebUI.Models.Food

@{
    ViewBag.Title = "FoodDetail";
}

<h2>@Model.FoodName</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FoodName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FoodName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FoodCompany)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FoodCompany)
        </dd>

        <dt>
        </dt>

        <dd>
            <img src="@Url.Content(Model.CertificateFoodUrl)"/>
