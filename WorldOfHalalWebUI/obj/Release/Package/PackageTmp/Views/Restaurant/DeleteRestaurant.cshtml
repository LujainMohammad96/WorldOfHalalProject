@model WorldOfHalalWebUI.Models.Restaurant

@{
    ViewBag.Title = @Model.RestaurantName;
}

<h2>@Model.RestaurantName</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.RestaurantName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RestaurantName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.RestaurantLocation)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RestaurantLocation)
        </dd>

        <dt>
        </dt>

        <dd>
            <img src="@Url.Content(Model.ImagePath)"/>
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "RestaurantList", null, new {@class = "btn btn-primary"})
        </div>
    }
</div>
