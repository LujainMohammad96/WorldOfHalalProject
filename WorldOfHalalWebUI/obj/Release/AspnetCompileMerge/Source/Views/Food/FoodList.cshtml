@model IEnumerable<WorldOfHalalWebUI.Models.Food>

@{
    ViewBag.Title = "FoodList";
}

<h2>Food List</h2>

<p>
    @Html.ActionLink("Create New", "AddFood", null, new {@class = "btn btn-warning"})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FoodName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FoodCompany)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CertificateFoodUrl)
        </th>
        <td>
            <strong>Controls</strong>
        </td>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FoodName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FoodCompany)
        </td>
        <td>
            <img src="@Url.Content(item.CertificateFoodUrl)"  width="50" height="50"/>
        </td>
        <td>
            @Html.ActionLink("Edit", "EditFood", new { id = item.FoodId }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Details", "FoodDetail", new { id = item.FoodId }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Delete", "DeleteFood", new { id = item.FoodId }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
