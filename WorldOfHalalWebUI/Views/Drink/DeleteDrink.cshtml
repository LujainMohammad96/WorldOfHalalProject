@model WorldOfHalalWebUI.Models.Drink

@{
    ViewBag.Title = @Model.DrinkName;
}

<h2>@Model.DrinkName</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DrinkName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DrinkName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DrinkCompany)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DrinkCompany)
        </dd>

        <dt>
        </dt>

        <dd>
            <img src="@Url.Content(Model.CertificateDrinkUrl)"/>
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "DrinkList", null, new {@class = "btn btn-primary"})
        </div>
    }
</div>
